<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import main.java.com.hotel.metier.StringRessources?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import com.jfoenix.validation.ValidationFacade?>
<?import javax.xml.validation.Validator?>
<?import com.jfoenix.validation.NumberValidator?>
<?import de.jensd.fx.fontawesome.Icon?>
<?import com.jfoenix.validation.RequiredFieldValidator?>
<JFXDialog xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/8"
           fx:controller="main.java.com.hotel.metier.dialogs.CompteDialogController" fx:id="dialog">
    <JFXDialogLayout>
        <heading>
            <Label>
                <text>
                    <StringRessources fx:constant="TITRE"/>
                </text>
            </Label>
        </heading>
        <body>
            <AnchorPane>
                <children>
                    <GridPane prefHeight="297.0" prefWidth="579.0" AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <children>
                            <JFXTextField fx:id="nom" labelFloat="true" prefHeight="25.0" prefWidth="212.0"
                                          GridPane.columnIndex="1">
                                <GridPane.margin>
                                    <Insets left="10.0"/>
                                </GridPane.margin>
                                <promptText>
                                    <StringRessources fx:constant="NOM"/>
                                </promptText>
                                <validators>
                                    <RequiredFieldValidator message="Champe obligatoire">
                                        <Icon awesomeIcon="WARNING" style="-fx-font-family: FontAwesome;"/>
                                    </RequiredFieldValidator>
                                </validators>
                            </JFXTextField>
                            <JFXTextField fx:id="prenom" prefHeight="25.0" prefWidth="212.0" GridPane.columnIndex="1"
                                          GridPane.rowIndex="1">
                                <padding>
                                    <Insets left="10.0" right="10.0"/>
                                </padding>
                                <validators>
                                    <RequiredFieldValidator message="Champe obligatoire">
                                        <Icon awesomeIcon="WARNING" style="-fx-font-family: FontAwesome;"/>
                                    </RequiredFieldValidator>
                                </validators>
                                <promptText>
                                    <StringRessources fx:constant="PRENOM"/>
                                </promptText>
                                <GridPane.margin>
                                    <Insets left="10.0"/>
                                </GridPane.margin>
                            </JFXTextField>
                            <JFXTextField fx:id="numTel" labelFloat="true" prefHeight="25.0" prefWidth="212.0"
                                          GridPane.columnIndex="1" GridPane.rowIndex="2">
                                <padding>
                                    <Insets left="10.0" right="10.0"/>
                                </padding>
                                <promptText>
                                    <StringRessources fx:constant="TEL"/>
                                </promptText>
                                <validators>
                                    <NumberValidator message="Entrez un numéro de téléphone">
                                        <Icon awesomeIcon="WARNING" style="-fx-font-family: FontAwesome;"/>
                                    </NumberValidator>
                                </validators>
                                <GridPane.margin>
                                    <Insets left="10.0"/>
                                </GridPane.margin>
                            </JFXTextField>
                            <JFXTextField fx:id="nomDuCompte" labelFloat="true">
                                <padding>
                                    <Insets left="10.0" right="10.0"/>
                                </padding>
                                <validators>
                                    <RequiredFieldValidator message="Champe obligatoire">
                                        <Icon awesomeIcon="WARNING" style="-fx-font-family: FontAwesome;"/>
                                    </RequiredFieldValidator>
                                </validators>
                                <promptText>
                                    <StringRessources fx:constant="USER"/>
                                </promptText>
                                <GridPane.margin>
                                    <Insets right="10.0"/>
                                </GridPane.margin>
                            </JFXTextField>
                            <JFXPasswordField fx:id="password" labelFloat="true" GridPane.rowIndex="1">
                                <padding>
                                    <Insets left="10.0" right="10.0"/>
                                </padding>
                                <validators>
                                    <RequiredFieldValidator message="Champe obligatoire">
                                        <Icon awesomeIcon="WARNING" style="-fx-font-family: FontAwesome;"/>
                                    </RequiredFieldValidator>
                                </validators>
                                <promptText>
                                    <StringRessources fx:constant="PASSWORD"/>
                                </promptText>
                                <GridPane.margin>
                                    <Insets right="10.0"/>
                                </GridPane.margin>
                            </JFXPasswordField>
                            <JFXPasswordField fx:id="confirmPass" labelFloat="true" GridPane.rowIndex="2">
                                <padding>
                                    <Insets left="10.0" right="10.0"/>
                                </padding>
                                <validators>
                                    <RequiredFieldValidator message="Champe obligatoire">
                                        <Icon awesomeIcon="WARNING" style="-fx-font-family: FontAwesome;"/>
                                    </RequiredFieldValidator>
                                </validators>
                                <promptText>
                                    <StringRessources fx:constant="CONFIRMPASSWORD"/>
                                </promptText>
                                <GridPane.margin>
                                    <Insets right="10.0"/>
                                </GridPane.margin>
                            </JFXPasswordField>
                            <JFXComboBox fx:id="type" labelFloat="true" prefHeight="25.0" prefWidth="95.0"
                                         GridPane.rowIndex="3">
                                <promptText>
                                    <StringRessources fx:constant="TYPE"/>
                                </promptText>
                            </JFXComboBox>
                        </children>
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                        </padding>
                    </GridPane>
                </children>
            </AnchorPane>

        </body>
        <actions>
            <JFXButton styleClass="dialog-accept" onAction="#enregistrer">
                <text>
                    <StringRessources fx:constant="ENREGISTRER"/>
                </text>
            </JFXButton>
            <JFXButton styleClass="dialog-accept" onAction="#annuler">
                <text>
                    <StringRessources fx:constant="ANNULER"/>

                </text>
            </JFXButton>
        </actions>
    </JFXDialogLayout>
</JFXDialog>